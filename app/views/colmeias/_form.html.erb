<%= form_for @colmeia, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :area_id, :class => 'control-label' %>
    <div class="controls">
      
      <%= f.select :area_id, 
        @areas.collect { |a| [ a.nome, a.id ] } , :include_blank => true%>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :nome, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nome, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                colmeias_path, :class => 'btn' %>
  </div>
<% end %>
